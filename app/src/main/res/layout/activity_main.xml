<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jian.smarthome.MainActivity">

    <TextView
        android:text="读卡器IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="端口"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="31dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCommit"
        android:layout_alignLeft="@+id/btCommit"
        android:layout_alignStart="@+id/btCommit"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/tvInfo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:id="@+id/edtFidIp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:text="192.168.0.109" />

    <TextView
        android:text="卡号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/edtFidPort"
        android:layout_toLeftOf="@+id/edtFidIp"
        android:layout_toStartOf="@+id/edtFidIp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtFidPort"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/edtFidIp"
        android:layout_alignStart="@+id/edtFidIp"
        android:text="4001" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCommit"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/tvCardID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCardID"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3" />

    <Button
        android:text="sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:id="@+id/btSun" />

    <Button

        android:text="灯光蜂鸣器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_btBuzzer"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btHome"
        android:layout_alignStart="@+id/btHome" />

    <Button
        android:text="风扇"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_btBuzzer"
        android:layout_alignLeft="@+id/main_btBuzzer"
        android:layout_alignStart="@+id/main_btBuzzer"
        android:id="@+id/main_btfan" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:id="@+id/button5" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btHome"
        android:layout_below="@+id/btSun"
        android:layout_alignLeft="@+id/btSun"
        android:layout_alignStart="@+id/btSun" />
</RelativeLayout>
